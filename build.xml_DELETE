<?xml version="1.0" encoding="UTF-8"?>
<project
		xmlns = "http://maven.apache.org/POM/4.0.0"
		xmlns:xsi = "http://www.w3.org/2001/XMLSchema-instance"
		xsi:schemaLocation = "http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<description>
		Contains build settings (plugins, profiles, etc.).
	</description>
	<modelVersion>4.0.0</modelVersion>
	<groupId>stinc.male.sandbox</groupId>
	<artifactId>sandbox-build</artifactId>
	<packaging>pom</packaging>
	<name>sandbox-build</name>
	<url>${sandbox.url}</url>
	<parent>
		<groupId>stinc.male.sandbox</groupId>
		<artifactId>sandbox-plugins</artifactId>
		<version>0.0.0-SNAPSHOT</version>
		<relativePath>plugins.xml</relativePath>
	</parent>
	<profiles>
		<profile>
			<id>default</id>
			<properties>
				<maven.test.skip>true</maven.test.skip>
			</properties>
			<activation>
				<activeByDefault/>
			</activation>
		</profile>
		<profile>
			<id>test</id>
			<properties>
				<maven.test.skip>false</maven.test.skip>
			</properties>
		</profile>
		<profile>
			<id>assembly</id>
			<build>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-assembly-plugin</artifactId>
					</plugin>
				</plugins>
			</build>
		</profile>
		<profile>
			<id>doc</id>
			<build>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-javadoc-plugin</artifactId>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>
	<build>
		<defaultGoal>install</defaultGoal>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-source-plugin</artifactId>
			</plugin>
		</plugins>
	</build>
</project>